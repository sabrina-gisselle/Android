<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gov.multiversal.tasks4tigers2" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="gov.multiversal.tasks4tigers2.TaskMainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="gov.multiversal.tasks4tigers2.TaskDetailActivity"
            android:label="@string/title_activity_task" >
        </activity>

        <provider
            android:name="gov.multiversal.tasks4tigers2.contentprovider.TaskContentProvider"
            android:authorities="gov.multiversal.tasks4tigers2.provider"
            android:enabled="true"
            android:exported="true" >
        </provider>
    </application>

</manifest>
