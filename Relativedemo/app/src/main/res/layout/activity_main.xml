<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Red"
        android:id="@id/Red"
        android:background="#ff0000"
        android:padding="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Yellow"
        android:id="@id/Yellow"
        android:background="#fff000"
        android:layout_below="@+id/Orange"
        android:layout_toRightOf="@+id/Orange"
        android:layout_marginTop="67dp"
        android:padding="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Orange"
        android:id="@id/Orange"
        android:background="#ff8000"
        android:layout_below="@+id/Red"
        android:layout_toRightOf="@+id/Red"
        android:padding="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Green"
        android:id="@id/Green"
        android:background="#00ff00"
        android:layout_below="@+id/Yellow"
        android:layout_toRightOf="@id/Red"
        android:layout_marginTop="67dp"
        android:layout_toLeftOf="@+id/Yellow"

        android:padding="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Blue"
        android:id="@id/Blue"
        android:background="#0000ff"
        android:layout_below="@+id/Green"
        android:layout_toLeftOf="@+id/Green"
        android:padding="20dp"/>
</RelativeLayout>
